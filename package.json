{
  "name": "prueba-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev:web": "astro dev",
    "dev:api": "nodemon server.mjs",
    "dev": "concurrently -k -n api,web -c cyan,magenta \"pnpm:dev:api\" \"pnpm:dev:web\"",
    "start:api": "node server.mjs",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:migrate": "prisma migrate dev --name init_schema",
    "db:seed": "prisma db seed",
    "api": "tsx server/index.ts",
    "api:watch": "nodemon --watch server --ext ts,js --exec \"pnpm api\"",
    "db:push": "prisma db push"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@tailwindcss/vite": "^4.1.12",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "tailwindcss": "^4.1.12",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "astro": "^5.14.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
