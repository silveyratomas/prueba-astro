--- 
import "../../styles/global.css"; 
--- 

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Mi Cuenta – TuTienda</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen bg-[var(--surface)] text-[var(--text)]">
    <!-- Formulario de perfil -->
    <div class="flex justify-center items-center py-12">
      <form class="bg-[var(--card)] border border-[var(--card-border)] rounded-xl p-8 space-y-6 w-full max-w-lg shadow-lg"
            onsubmit="event.preventDefault(); __saveProfile(this);">
        <h1 class="text-2xl font-bold text-center text-[var(--text)]">Mi Cuenta</h1>

        <!-- Nombre y Apellido -->
        <div>
          <label class="text-sm font-medium text-[var(--text)]" for="name">Nombre y Apellido</label>
          <input name="name" id="name" type="text" required
                 class="mt-2 w-full rounded-lg border border-[var(--card-border)] px-4 py-2 bg-white text-[var(--text)]" />
        </div>

        <!-- E-mail -->
        <div>
          <label class="text-sm font-medium text-[var(--text)]" for="email">E-mail</label>
          <input name="email" id="email" type="email" required
                 class="mt-2 w-full rounded-lg border border-[var(--card-border)] px-4 py-2 bg-white text-[var(--text)]" />
        </div>

        <!-- Teléfono -->
        <div>
          <label class="text-sm font-medium text-[var(--text)]" for="phone">Teléfono</label>
          <input name="phone" id="phone" type="tel" inputmode="tel"
                 class="mt-2 w-full rounded-lg border border-[var(--card-border)] px-4 py-2 bg-white text-[var(--text)]" />
        </div>

        <!-- Dirección -->
        <div>
          <label class="text-sm font-medium text-[var(--text)]" for="address">Dirección</label>
          <input name="address" id="address" type="text"
                 class="mt-2 w-full rounded-lg border border-[var(--card-border)] px-4 py-2 bg-white text-[var(--text)]" />
        </div>

        <!-- Botón guardar -->
        <div class="flex justify-between gap-3">
          <button type="submit" class="btn w-full">Guardar cambios</button>
          <button type="button" onclick="window.location.href='/';" class="btn-outline w-full">Salir</button>
        </div>

        <p class="text-center text-xs text-[var(--muted)] mt-4">
          Al guardar, los datos serán actualizados en tu cuenta.
        </p>
      </form>
    </div>

    <script>
      // @ts-nocheck
      // Verifica si el usuario está logueado
      document.addEventListener('DOMContentLoaded', () => {
        if (!tpUser.isLogged()) {
          alert('Por favor, inicia sesión para acceder a esta página.');
          window.location.href = '/cuenta/ingresar'; // Redirige si no está logueado
        }
      });
    </script>
  </body>
</html>
