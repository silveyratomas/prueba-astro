---
import Layout from "../../layouts/Layout.astro";
import { products } from "../../data/products";

// Esto genera las rutas estáticas para cada producto
export function getStaticPaths() {
  return products.map((p) => ({
    params: { slug: p.slug },
    props: { product: p },
  }));
}

const { product } = Astro.props;
const fmt = (c: number) => new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(c);
--- 

<Layout title={`${product.title} – TuTienda`} description={product.description}>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
    <!-- Imagen del producto -->
    <div class="relative w-full overflow-hidden rounded-xl bg-gray-100" style="padding-top:56.25%;">
      <img src={product.img} alt={product.title} class="absolute inset-0 w-full h-full object-contain" loading="lazy" />
    </div>

    <!-- Detalles del producto -->
    <section class="bg-white border border-[var(--card-border)] rounded-xl p-6 shadow-sm">
      <!-- Nombre del producto -->
      <h1 class="text-3xl font-semibold mb-3">{product.title}</h1>

      <!-- Precio del producto -->
      <p class="text-xl font-semibold text-[var(--text)] mb-4">{fmt(product.price)}</p>

      <!-- Descripción del producto -->
      <p class="text-sm text-[var(--muted)] mb-6">{product.description}</p>

      <!-- Botones de acción -->
      <div class="flex gap-4">
        <!-- Agregar al carrito -->
        <button
          class="inline-flex items-center rounded-lg bg-[var(--accent)] text-white px-4 py-2 hover:bg-[var(--accent-hover)]"
          onclick={`tpCart.addToCart(${JSON.stringify({ slug: product.slug, title: product.title, price: product.price, qty: 1 })})`}
        >
          Agregar al carrito
        </button>

        <!-- Ir a comprar -->
        <a
          href="/comprar"
          class="inline-flex items-center rounded-lg bg-[var(--accent)] text-white px-4 py-2 hover:bg-[var(--accent-hover)]"
        >
          Ir a comprar
        </a>
      </div>
    </section>
  </div>

  <!-- Productos recomendados (opcional) -->
  <section class="mt-12">
    <h2 class="text-2xl font-semibold mb-4">Productos recomendados</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {products.filter(p => p.slug !== product.slug).slice(0, 3).map(p => (
        <article class="card flex flex-col p-4">
          <div class="relative w-full overflow-hidden rounded-lg bg-gray-100" style="padding-top:56.25%;">
            <img src={p.img} alt={p.title} class="absolute inset-0 w-full h-full object-contain" loading="lazy" />
          </div>
          <h3 class="mt-3 font-semibold text-lg">{p.title}</h3>
          <p class="text-gray-500">{fmt(p.price)}</p>
          <a class="btn mt-2" href={`/producto/${p.slug}`}>Ver más</a>
        </article>
      ))}
    </div>
  </section>
</Layout>
