---
import Layout from "../../layouts/Layout.astro";
import { products } from "../../data/products";

// Rutas estáticas para cada producto
export function getStaticPaths() {
  return products.map((p) => ({
    params: { slug: p.slug },
    props: { product: p },
  }));
}

// Props
const { product } = Astro.props;

// ARS; si luego querés leerlo de config, cambia acá
const CURRENCY = "ARS";
const fmt = (c: number) =>
  new Intl.NumberFormat("es-AR", { style: "currency", currency: CURRENCY }).format(c);

// Recomendados (excluye el actual)
const recomendados = products.filter((p) => p.slug !== product.slug).slice(0, 3);

// JSON-LD (SEO). Si configurás `site` en astro.config.mjs, acá podés usar Astro.site
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: product.title,
  image: product.img,
  description: product.description,
  sku: product.slug,
  offers: {
    "@type": "Offer",
    priceCurrency: CURRENCY,
    price: product.price,
    availability: "https://schema.org/InStock",
    url: `/producto/${product.slug}`,
  },
};
---

<Layout title={`${product.title} – TuTienda`} description={product.description}>
  <!-- Breadcrumb -->
  <nav class="text-sm text-[var(--muted)] mb-4" aria-label="Breadcrumb">
    <ol class="flex items-center gap-2">
      <li><a href="/" class="hover:underline">Inicio</a></li>
      <li aria-hidden="true">/</li>
      <li><a href="/listado_box" class="hover:underline">Productos</a></li>
      <li aria-hidden="true">/</li>
      <li class="text-[var(--text)] font-medium line-clamp-1">{product.title}</li>
    </ol>
  </nav>

  <!-- Detalle de producto -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start" itemscope itemtype="https://schema.org/Product">
    <!-- Imagen principal -->
    <div class="relative w-full overflow-hidden rounded-xl bg-[color:var(--card-border)]/30 md:sticky md:top-6" style="padding-top:56.25%;">
      <img
        src={product.img}
        alt={product.title}
        class="absolute inset-0 w-full h-full object-contain"
        loading="lazy"
        itemprop="image"
      />
    </div>

    <!-- Información -->
    <section class="bg-[var(--card)] border border-[var(--card-border)] rounded-xl p-6 shadow-sm">
      <h1 class="text-3xl font-semibold mb-2" itemprop="name">{product.title}</h1>

      <!-- Precio + disponibilidad -->
      <div class="flex items-center gap-3 mb-4" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <div class="text-2xl font-bold text-[var(--text)]">
          <span aria-label="Precio">{fmt(product.price)}</span>
          <!-- meta sin formato para SEO -->
          <meta itemprop="price" content={String(product.price)} />
          <meta itemprop="priceCurrency" content={CURRENCY} />
          <link itemprop="availability" href="https://schema.org/InStock" />
        </div>
        <span class="inline-flex items-center rounded-full border border-[color:var(--card-border)] px-2 py-1 text-xs text-[color:var(--muted)]">
          En stock
        </span>
      </div>

      <!-- Descripción -->
      <p class="text-sm text-[var(--muted)] mb-6" itemprop="description">{product.description}</p>

      <!-- Cantidad + Acciones -->
      <div class="flex items-end gap-4 flex-wrap">
        <div>
          <label for="qty" class="block text-sm font-medium mb-1">Cantidad</label>
          <div class="flex items-center gap-2">
            <button type="button" id="qtyMinus" class="inline-flex items-center rounded-lg border border-[var(--card-border)] px-3 py-2 hover:bg-[var(--surface)]" aria-label="Disminuir unidades">–</button>
            <input
              id="qty" name="qty" type="number" min="1" value="1" inputmode="numeric" pattern="[0-9]*"
              class="w-16 text-center rounded-lg border border-[var(--card-border)] px-3 py-2 bg-white"
              aria-label="Cantidad"
            />
            <button type="button" id="qtyPlus" class="inline-flex items-center rounded-lg border border-[var(--card-border)] px-3 py-2 hover:bg-[var(--surface)]" aria-label="Aumentar unidades">+</button>
          </div>
        </div>

        <div class="flex gap-3">
          <button
            id="btnAdd"
            class="btn"
          >
            Agregar al carrito
          </button>

          <button
            id="btnBuy"
            class="btn-outline"
          >
            Comprar ahora
          </button>
        </div>
      </div>

      <!-- Confianza -->
      <ul class="mt-6 grid sm:grid-cols-3 gap-3 text-xs text-[color:var(--muted)]">
        <li class="rounded-lg border border-[color:var(--card-border)] px-3 py-2">Envíos a todo el país</li>
        <li class="rounded-lg border border-[color:var(--card-border)] px-3 py-2">Garantía oficial</li>
        <li class="rounded-lg border border-[color:var(--card-border)] px-3 py-2">Pagá en cuotas</li>
      </ul>

      <!-- Live region accesible para feedback -->
      <div id="live" class="sr-only" aria-live="polite"></div>

      <!-- Datos para JS -->
      <div id="productData" class="hidden"
           data-slug={product.slug}
           data-title={product.title}
           data-price={product.price}></div>
    </section>
  </div>

  <!-- Recomendados -->
  {recomendados.length > 0 && (
    <section class="mt-12">
      <h2 class="text-2xl font-semibold mb-4">Productos recomendados</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {recomendados.map((p) => (
          <article class="card flex flex-col">
            <div class="relative w-full overflow-hidden rounded-lg bg-[color:var(--card-border)]/30" style="padding-top:56.25%;">
              <img src={p.img} alt={p.title} class="absolute inset-0 w-full h-full object-contain" loading="lazy" />
            </div>
            <h3 class="mt-3 font-semibold text-lg">{p.title}</h3>
            <p class="text-[var(--muted)]">{fmt(p.price)}</p>
            <div class="mt-2 flex gap-2">
              <a class="btn" href={`/producto/${p.slug}`}>Ver más</a>
              <button
                class="btn-outline"
                onclick={`tpCart.addToCart(${JSON.stringify({ slug: p.slug, title: p.title, price: p.price, qty: 1 })})`}
              >
                Agregar
              </button>
            </div>
          </article>
        ))}
      </div>
    </section>
  )}

  <!-- JSON-LD para SEO -->
  <script type="application/ld+json">
    {JSON.stringify(jsonLd)}
  </script>

  <!-- JS: cantidad + acciones -->
  <script>
    // @ts-nocheck
    document.addEventListener('DOMContentLoaded', () => {
      const data = document.getElementById('productData');
      if (!data || !window.tpCart) return;

      const slug  = data.dataset.slug;
      const title = data.dataset.title;
      const price = parseFloat(data.dataset.price);

      const qtyInput = document.getElementById('qty');
      const minus = document.getElementById('qtyMinus');
      const plus  = document.getElementById('qtyPlus');
      const add   = document.getElementById('btnAdd');
      const buy   = document.getElementById('btnBuy');
      const live  = document.getElementById('live');

      const getQty = () => Math.max(1, parseInt(qtyInput.value || '1', 10));

      minus.addEventListener('click', () => { qtyInput.value = String(Math.max(1, getQty() - 1)); });
      plus.addEventListener('click', () => { qtyInput.value = String(getQty() + 1); });

      function announce(msg){ if(live){ live.textContent = msg; } }

      add.addEventListener('click', () => {
        const qty = getQty();
        tpCart.addToCart({ slug, title, price, qty });
        announce(`Se agregaron ${qty} unidad(es) de ${title} al carrito.`);
      });

      buy.addEventListener('click', () => {
        const qty = getQty();
        tpCart.addToCart({ slug, title, price, qty });
        window.location.href = '/comprar';
      });
    });
  </script>
</Layout>
