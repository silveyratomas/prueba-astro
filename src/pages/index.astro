---
import Layout from "../layouts/Layout.astro";
import { products } from "../data/products";

const destacados = products.filter(p => p.featured);
// ‚¨áÔ∏è formateador ARS en pesos
const fmt = (c:number) =>
  new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(c);
---
<Layout title="TuTienda ‚Äì Inicio">
  <!-- Hero -->
  <section class="text-center mb-12">
    <h1 class="h1">Bienvenid@ a <span class="text-indigo-600">TuTienda</span></h1>
    <p class="mt-3 muted max-w-2xl mx-auto">
      Cat√°logo √°gil, productos f√°ciles de administrar y una experiencia de compra simple.
    </p>
    <div class="mt-6 flex justify-center gap-4 flex-wrap">
      <a href="/listado_box" class="btn">Ver productos</a>
      <a href="/listado_tablas" class="btn">Listado en tabla</a>
      <a href="/comprar" class="btn">Ir a comprar</a>
    </div>
  </section>

  <!-- Features -->
  <section class="grid gap-6 md:grid-cols-3 mb-12">
    <div class="card text-center">
      <h3 class="font-semibold text-lg mb-2">Cat√°logo en tarjetas</h3>
      <p class="muted text-sm">Explor√° el listado tipo ‚Äúbox‚Äù.</p>
      <a href="/listado_box" class="btn mt-3">Abrir listado (box)</a>
    </div>
    <div class="card text-center">
      <h3 class="font-semibold text-lg mb-2">Vista en tabla</h3>
      <p class="muted text-sm">Compar√° productos y precios.</p>
      <a href="/listado_tablas" class="btn mt-3">Abrir listado (tabla)</a>
    </div>
    <div class="card text-center">
      <h3 class="font-semibold text-lg mb-2">Compra sencilla</h3>
      <p class="muted text-sm">Formulario con datos del cliente y carrito.</p>
      <a href="/comprar" class="btn mt-3">Completar compra</a>
    </div>
  </section>

  <!-- Destacados -->
  <section>
    <div class="flex items-center justify-between mb-4">
      <h2 class="h2">Destacados</h2>
      <a href="/listado_box" class="text-indigo-600 text-sm hover:underline">Ver todo ‚Üí</a>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {destacados.map(p => (
        <article class="card flex flex-col">
          <!-- üëá wrapper 16:9 para im√°genes -->
          <div class="relative w-full overflow-hidden rounded-lg bg-gray-100 mb-3" style="padding-top:56.25%;">
            <img
              src={p.img}
              alt={p.title}
              class="absolute inset-0 w-full h-full object-contain"
              loading="lazy"
            />
          </div>
          <h3 class="font-semibold text-lg">{p.title}</h3>
          <p class="muted">{fmt(p.price)}</p>
          <p class="text-sm muted mb-3">{p.description}</p>
          <div class="mt-auto flex gap-2">
            <a class="btn" href={`/producto/${p.slug}`}>Ver</a>
            <button
              class="btn"
              onclick={`tpCart.addToCart(${JSON.stringify({ slug:p.slug, title:p.title, price:p.price, qty:1 })})`}
            >Agregar</button>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
