---
import Layout from "../layouts/Layout.astro";
import { products } from "../data/products";

const destacados = products.filter(p => p.featured);
// ‚¨áÔ∏è formateador ARS en pesos
const fmt = (c: number) =>
  new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(c);
---

<Layout title="TuTienda ‚Äì Inicio">
  <!-- Hero -->
  <section id="homeHero" class="text-center mb-12 pt-4 relative overflow-hidden rounded-xl">
    <!-- overlay (se activa por JS si hay imagen) -->
    <div id="homeHeroOv" class="pointer-events-none absolute inset-0 hidden"></div>

    <h1 class="h1 text-[var(--text)] relative z-10">
      Bienvenid@ a <span id="brandNameHome" class="text-[var(--accent)]">TuTienda</span>
    </h1>
    <p id="homeTagline" class="mt-3 muted max-w-2xl mx-auto text-[var(--muted)] relative z-10">
      Cat√°logo √°gil, productos f√°ciles de administrar y una experiencia de compra simple.
    </p>
    <div class="mt-6 flex justify-center gap-4 flex-wrap relative z-10">
      <a href="/listado_box" class="btn">Ver productos</a>
      <a href="/listado_tablas" class="btn">Listado en tabla</a>
      <a href="/comprar" class="btn">Ir a comprar</a>
    </div>
  </section>

  <!-- Features -->
  <section class="grid gap-6 md:grid-cols-3 mb-12">
    <div class="card text-center">
      <h3 class="font-semibold text-lg mb-2 text-[var(--text)]">Cat√°logo en tarjetas</h3>
      <p class="muted text-sm text-[var(--muted)]">Explor√° el listado tipo ‚Äúbox‚Äù.</p>
      <a href="/listado_box" class="btn mt-3">Abrir listado (box)</a>
    </div>
    <div class="card text-center">
      <h3 class="font-semibold text-lg mb-2 text-[var(--text)]">Vista en tabla</h3>
      <p class="muted text-sm text-[var(--muted)]">Compar√° productos y precios.</p>
      <a href="/listado_tablas" class="btn mt-3">Abrir listado (tabla)</a>
    </div>
    <div class="card text-center">
      <h3 class="font-semibold text-lg mb-2 text-[var(--text)]">Compra sencilla</h3>
      <p class="muted text-sm text-[var(--muted)]">Formulario con datos del cliente y carrito.</p>
      <a href="/comprar" class="btn mt-3">Completar compra</a>
    </div>
  </section>

  <!-- Destacados -->
  <section>
    <div class="flex items-center justify-between mb-4">
      <h2 class="h2 text-[var(--text)]">Destacados</h2>
      <a href="/listado_box" class="text-[var(--accent)] btnFondoBlanco text-sm hover:underline">Ver todo ‚Üí</a>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {destacados.map(p => (
        <article class="card flex flex-col">
          <!-- üëá wrapper 16:9 para im√°genes -->
          <div class="relative w-full overflow-hidden rounded-lg bg-[var(--card-border)] mb-3" style="padding-top:56.25%;">
            <img
              src={p.img}
              alt={p.title}
              class="absolute inset-0 w-full h-full object-contain"
              loading="lazy"
            />
          </div>
          <h3 class="font-semibold text-lg text-[var(--text)]">{p.title}</h3>
          <p class="text-[var(--muted)]">{fmt(p.price)}</p>
          <p class="text-sm text-[var(--muted)] mb-3">{p.description}</p>
          <div class="mt-auto flex gap-2">
            <a class="btn" href={`/producto/${p.slug}`}>Ver</a>
            <button
              class="btn"
              onclick={`tpCart.addToCart(${JSON.stringify({ slug:p.slug, title:p.title, price:p.price, qty:1 })})`}
            >Agregar</button>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- Aplica config del admin (tema/nombre/banner/tagline) -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Si el Layout ya guard√≥ la config en window.__storeConfig, √∫sala; si no, intent√° leer de admin.js
      const cfg = window.__storeConfig || (window.tpAdmin && tpAdmin.getConfig ? tpAdmin.getConfig() : {}) || {};

      // Nombre de la tienda en el hero
      const brandHome = document.getElementById('brandNameHome');
      if (brandHome && cfg.storeName) brandHome.textContent = cfg.storeName;

      // Imagen de fondo del hero
      const hero = document.getElementById('homeHero');
      const ov   = document.getElementById('homeHeroOv');
      if (hero && cfg.heroImage) {
        hero.style.minHeight = '340px';
        hero.style.backgroundImage = `url('${cfg.heroImage}')`;
        hero.style.backgroundSize = 'cover';
        hero.style.backgroundPosition = 'center';
        if (ov) {
          ov.classList.remove('hidden');
          ov.style.background = 'linear-gradient(to bottom, rgba(0,0,0,.30), rgba(0,0,0,.15))';
        }
        // texto blanco si hay imagen oscura (opcional, coment√° si no te gusta)
        hero.querySelectorAll('.h1, p, a.btn').forEach(el => {
          el.classList.add('text-white');
        });
      }

      // Tagline
      const tag = document.getElementById('homeTagline');
      if (tag && cfg.tagline) tag.textContent = cfg.tagline;

      // Tema: si el Layout no lo aplic√≥, aplicalo ac√°
      if (window.tpAdmin && tpAdmin.applyThemeClass) {
        tpAdmin.applyThemeClass(cfg.themeClass || '');
      }
    });
  </script>
</Layout>
